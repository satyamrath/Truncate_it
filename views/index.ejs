<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>URL Shrinker</title>
  </head>
  <body>

    <div class="container">
        <h1 class="text-center my-5">URL Shrinker</h1>
        <form action="/" method="POST" class="my-4 form-inline">
            <div class="input-group input-group-lg">
                <span class="input-group-text" id="inputGroup-sizing-lg"><label for="fullUrl">URL</label></span>
                <input type="url" name="fullUrl" id="fullUrl" required class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
            </div>
            <div class="d-grid gap-2 my-2">
                <button class="btn btn-success" type="submit">Shrink</button>
            </div>
        </form>

        <table class="table table-borderless my-5" style="overflow-x: hidden;">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach( shortUrl => { %> 
                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full.substring(0, 50) %> <% if(shortUrl.full.length > 50){ %>...<% } %></a></td>
                        <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
